<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="MauiApp1.Elements.HeaderItem"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1.Elements"
             BackgroundColor="White">
    <ContentView.Content>
        <Grid Margin="32 32 0 32">
            <Button  x:Name="CardButton" Clicked="CardButton_Clicked">
                <Button.Text Margin="16"   

                   HorizontalOptions="Center"
                   TextColor="Purple"
                   VerticalOptions="Center">
                    Welcome to .NET MAUI!!!
                </Button.Text>
            </Button>
        </Grid>
    </ContentView.Content>
</ContentView>