<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="MauiApp1.Elements.ToDoItem"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1.Elements"
             BackgroundColor="White" Margin="0 16 8 0">
    <ContentView.Content>
        <GridLayout>
            <HorizontalStackLayout>
                <CheckBox x:Name="CheckBox1" />
                <Entry Placeholder="SampleText"
                   HorizontalOptions="Center"
                   TextColor="Purple" x:Name="TextBox"
                   VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <Button HorizontalOptions="End" Text="x" Background="red" WidthRequest="38" HeightRequest="38" FontSize="24" Padding="0" Clicked="Button_Clicked"/>

        </GridLayout>
        
    </ContentView.Content>
</ContentView>